<figure id="imgFull">
    <img src="img/{{images.0.image}}" alt=""/>

   {{#if caption}}
         <figcaption>{{caption}}</figcaption>
    {{/if}}
</figure>

<ul id="slider-controls">

    <li><a href="#" class="prev">Previous</a></li>
    <li><a href="#" class="next">Next</a></li>
</ul>

<div class="expanded-info">
<dl>
    <dt>Category</dt>
    <dd><span class="icon"></span> {{this.category}}</dd>
    <dd>{{this.platform}}</dd> 

    <dt>Project Name</dt>
    <dd>{{this.name}}</dd>       
    
    <dt>Skills</dt>
    {{#each this.skills}}
         <dd>{{skill}}</dd>
    {{/each}}
    
    
    <dt>Roles</dt>
    {{#each this.role}}
         <dd>{{role}}</dd>
    {{/each}}

    <dt>Team</dt>
    {{#each this.team}}
         <dd>{{member}} - <em>{{role}}</em></dd>
        
    {{/each}}

    <dt>Year</dt>
    <dd>{{this.year}}</dd>

    <dt>Description</dt>
    <dd>{{this.description}}</dd>
</dl>
</div>
